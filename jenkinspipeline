pipeline {
    agent any
    tools {
        terraform 'terraform-11'
    }

    stages {
        stage('git checkout') {
            steps {
               git 'https://github.com/nageswar103/iac-demo.git'
            }
        }
        stage('Terraform Init') {
            steps {
                sh 'terraform init'
            }
        }
        stage('Terraform apply') {
            steps {
                sh 'terraform apply --auto-approve'
            }
        }
         
    }
}